@page
@model WorldUjp.Pages.Product.AddProductModel
@{
    ViewData["Title"] = "Index";
}

<h1>Product Management</h1>

<partial name="TaxPayerFL" model="Model.TaxPayer" />



<form method="post">
    <input type="hidden" asp-for="@Model.TaxPayer.Id" />
    <input type="hidden" asp-for="@Model.TaxPayer.FirstName" />
    <input type="hidden" asp-for="@Model.TaxPayer.LastName" />
    <input type="hidden" asp-for="@Model.TaxPayer.CountryId" />
    <div class="form-row">
        <div class="form-group col-sm-4">
            <label asp-for="@Model.Product.Name"></label>
            <input type="text" class="form-control" asp-for="@Model.Product.Name">
            <span class="text-danger" asp-validation-for="@Model.Product.Name"></span>

        </div>
        <div class="form-group col-sm-4">
            <label asp-for="@Model.Product.Price"></label>
            <input type="text" class="form-control" asp-for="@Model.Product.Price">
            <span class="text-danger" asp-validation-for="@Model.Product.Price"></span>

        </div>
        <div class="form-group col-sm-4">
            <label asp-for="@Model.Product.DDV"></label>
            <select id="dropDown" asp-for="@Model.Product.ddvId" asp-items="@Model.DDVs" class="form-control">
                <option value="">Pick a DDV</option>
            </select>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-primary" asp-page="./ListProduct" asp-route-id="@Model.TaxPayer.Id">Cancel</a>
    </div>
</form>


@if (!string.IsNullOrEmpty(Model.Message))
{
<div class="alert alert-danger">@Model.Message</div>
}
